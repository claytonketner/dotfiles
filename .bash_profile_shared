if [ -f ~/.bashrc ]; then
   source ~/.bashrc
fi

export LANG=en_US.UTF-8
#
# Colors
#
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
#
# PATHs
#
export PATH=$PATH:~/bin
#
# Other
#
# Git autocompletion
if [ -f ~/.git-completion.bash ]; then
    . ~/.git-completion.bash
fi
# Global git ignore
git config --global core.excludesfile ~/.gitignore_global
